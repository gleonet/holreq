<%= form_for(leave_type) do |f| %>
  <% if leave_type.errors.any? %>
    <div class="callout alert">
      <h5><%= pluralize(leave_type.errors.count, "error") %> prohibited this leave_type from being saved:</h5>
      <ul>
        <% leave_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="button-group small">
    <%= f.submit class: 'button' %>
    <% if !leave_type.new_record? -%>
      <%= link_to leave_type_path(leave_type), class: 'secondary button' do -%>
        <i class='fi-eye'></i> Show
      <% end -%>
    <% end -%>
    <%= link_to leave_types_url, class: 'secondary button' do -%>
      <i class='fi-arrow-left'></i> Back
    <% end -%>
  </div>
<% end %>
