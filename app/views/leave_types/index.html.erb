<legend>Leave Types</legend>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_types.each do |leave_type| %>
      <tr>
        <td><%= leave_type.name %></td>
        <td><%= leave_type.description %></td>
        <td class='action'><%= link_to '', leave_type, class: 'fi-eye', title: 'Info' %></td>
        <td class='action'><%= link_to '', edit_leave_type_path(leave_type), class: 'fi-pencil', title: 'Edit' %></td>
        <td class='action'><%= link_to '', leave_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fi-trash', title: 'Delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leave Type', new_leave_type_path, class: 'button' %>
