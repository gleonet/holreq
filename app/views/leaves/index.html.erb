<legend>Leaves</legend>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Year</th>
      <th>Leave type</th>
      <th>Nb hours</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leave| %>
      <tr>
        <td><%= leave.user_id? ? leave.user.name : '' %></td>
        <td><%= leave.year %></td>
        <td><%= leave.leave_type_id? ? leave.leave_type.name : '' %></td>
        <td><%= leave.nb_hours %></td>
        <td class='action'><%= link_to '', leave, class: 'fi-eye', title: 'Info' %></td>
        <td class='action'><%= link_to '', edit_leave_path(leave), class: 'fi-pencil', title: 'Edit' %></td>
        <td class='action'><%= link_to '', leave, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fi-trash', title: 'Delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
