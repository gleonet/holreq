<legend>Leave Information</legend>

<dl>
  <dt>Leave type:</dt>
  <dd><%= @leave.leave_type.nil? ? '' : @leave.leave_type.name %></dd>
  <dt>User:</dt>
  <dd><%= @leave.user.nil? ? '' : @leave.user.name %></dd>
  <dt>Year:</dt>
  <dd><%= @leave.year %></dd>
  <dt>Nb hours:</dt>
  <dd><%= @leave.nb_hours %></dd>
</dl>

<div class='button-group small'>
  <%= link_to edit_leave_path(@leave), class: 'button secondary' do -%>
    <i class="fi-pencil"></i> Edit
  <% end -%>
  <%= link_to leaves_path, class: 'button secondary' do -%>
    <i class='fi-arrow-left'></i> Back
  <% end -%>
</div>
