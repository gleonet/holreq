<legend>User: <%= @user.name %></legend>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Login</th>
      <th>Email</th>
      <th>External ID</th>
      <th>Site</th>
      <th>Team</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @user.login %></td>
      <td><%= @user.email %></td>
      <td><%= @user.external_id %></td>
      <td><%= @user.site.nil? ? '' : @user.site.name %></td>
      <td><%= @user.team.nil? ? '' : @user.team.name %></td>
    </tr>
  </tbody>
</table>

<div class="button-group small">
  <% if @session_user.hr? -%>
    <%= link_to edit_user_path(@user), class: 'secondary button' do -%>
      <i class='fi-pencil'></i> Edit User
    <% end -%>
    <%= link_to users_path, class: 'secondary button' do -%>
      <i class='fi-arrow-left'></i> Users list
    <% end -%>
  <% end -%>
</div>

<%= render partial: 'leave_requests/list' %>

<div class="button-group small">
  <%= link_to new_leave_request_path(user_id: @user.id), class: 'button' do -%>
    <i class='fi-plus'></i> Create a Request
  <% end -%>
</div>

<!-- extra-content -->
<% content_for :title do -%>
  User: <%= @user.name %>
<% end -%>

<% content_for :right do -%>
  <%= render partial: 'users/summary' %>
<% end -%>
